generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  studentId String   @unique
  major     String
  bio       String?
  avatarUrl String?
  createdAt DateTime @default(now())
  posts     Post[]
  likes     Like[]
  comments  Comment[]
}

model Post {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])
  likes     Like[]
  comments  Comment[]
}

model Like {
  id     Int
  userId Int
  postId Int
  user   User @relation(fields: [userId], references: [id])
  post   Post @relation(fields: [postId], references: [id])

  @@unique([userId, postId])
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  userId    Int
  postId    Int
  user      User @relation(fields: [userId], references: [id])
  post      Post @relation(fields: [postId], references: [id])
}